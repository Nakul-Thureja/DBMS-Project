<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountCreation1"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Online Banking System"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:id="@+id/accType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#363A43"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a Branch:"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#363A43"/>

            <Spinner
                android:id="@+id/spinner"
                android:autofillHints=""
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:textSize="25sp"
                android:background="@drawable/spinner_file"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:text="Select a Branch"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/purple_700"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/purple_700"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_nominee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nominee Aadhar (OPTIONAL)"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:id="@+id/btn_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@null"
                    android:background="@color/purple_700"
                    android:text="Create Account"
                    android:textColor="@color/white"
                    android:textColorHint="#7A8089"
                    android:textSize="18sp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>