<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.Stats.StatsFragment"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Max Salary across branches"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Cards Expiring in the Next Year"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Ranking Customers Based on their Balance"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Loan Stats"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="RANKING ASSETS BASED ON RETURNS"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Get Contact Details"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:layout_marginBottom="10dp"
        android:text="Total Amount in Branch"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</LinearLayout>